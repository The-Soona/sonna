{
    "name": "soona",
    "version": "0.0.0-development",
    "description": "Yet another tool that optimizes the workflow of releasing multiple packages.",
    "author": "Raohai <surgesoft@gmail.com> (https://github.com/RaoHai)",
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/**/*.test.ts"
        ]
    },
    "bin": {
        "soona": "bin/soona.js"
    },
    "license": "MIT",
    "files": [
        "bin",
        "cli.js",
        "index.js"
    ],
    "main": "index.js",
    "engines": {
        "node": ">=10.18"
    },
    "dependencies": {
        "signale": "^1.4.0",
        "yargs": "^16.2.0"
    },
    "scripts": {
        "test": "ava",
        "build": "tsc",
        "ci": "npm run build --if-present && npm run test"
    },
    "devDependencies": {
        "@types/signale": "^1.4.1",
        "@types/yargs": "^16.0.0",
        "ava": "^3.15.0",
        "stream-buffers": "^3.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    }
}
